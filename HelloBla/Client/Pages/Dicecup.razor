@page "/dicecup"
@using HelloBla.Client.Model;

<h1>Dicecup</h1>

<img src="@NumberAsImage(dc.Eyes()[0])" />
<img src="@NumberAsImage(dc.Eyes()[1])" />

<button class="btn btn-primary" @onclick="dc.Shake">Clear</button>

@code {

    DiceCup dc = new DiceCup();

    protected override void OnInitialized()
    {
        dc.AddDice(new Dice(6));
        dc.AddDice(new Dice(6));
    }

    public string NumberAsImage(int eyes)
    {
        return "DiceImg/dice" + eyes + ".png";
    }

}


